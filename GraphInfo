class GraphInfo {
	public String name;
	public int nNodes;
	public int nEdges;
	public EdgeInfo edges[];

	public GraphInfo() {
		name = null;
		nNodes = 0;
		nEdges = 0;
		edges = null;
	}

	public String toString() {
		String s = "";

		s += "name: " + name + "\n";
		s += "nNodes: " + nNodes + "\n";
		s += "nEdges: " + nEdges + "\n";

		s += "edges: {";

		for (int i=0; i<nEdges-1; i++) {
			s += edges[i] + ",";
		}

		s += edges[nEdges-1] + "}\n";

		return s;
	}
}
